<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProcessDLActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pdltoolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Process of Driving Licence"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/pdltoolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/learning_licence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learning Licence"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/permanent_licence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permanent Licence"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/renewal_dl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Renewal of driving licence"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/duplicate_licence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Duplicate Licence"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/validity_dl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Validity of motor driving licence"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/international_dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="International driving permit"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unfitness_dv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unfitness to drive a vehicle"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/services_existing_licence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Services on Existing Licence"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fada70"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/reg_vipno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registration for VIP Numbers"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>