<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsHelpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shtoolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Settings and Help"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/shtoolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/remove_ads_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove Ads : â‚¹50.00"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings and Help"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Section 1: Process of Driving Licence -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/process_driving_licence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Process of Driving Licence"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section 2: RTO Offices -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rto_offices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RTO Offices"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section 3: Disclaimer -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/disclaimer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Disclaimer"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section 4: Privacy Policy -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section 5: Terms & Conditions -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/terms_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terms and Conditions"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>